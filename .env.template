# Claude Code Operating System Environment Configuration
# Copy this file to .env and fill in your values

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here

# Context7 Documentation Server
CONTEXT7_API_KEY=your_context7_api_key_here

# Database Configuration (if using PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Slack Integration (optional)
SLACK_TOKEN=your_slack_token_here

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Memory Storage Configuration
MEMORY_PATH=./context/memory

# Filesystem Allowed Paths
ALLOWED_PATHS=./claude-workspace,./examples,./context

# Development Settings
NODE_ENV=development
DEBUG=false
LOG_LEVEL=info

# Security Settings
ENABLE_SECURITY_SCAN=true
SECURITY_SCAN_LEVEL=deep
OWASP_CHECK=true

# Performance Settings
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=3600

# Claude Code Specific Settings
CLAUDE_WORKSPACE=./claude-workspace
CLAUDE_THINKING_BUDGET=standard
CLAUDE_AUTO_COMMIT=false
CLAUDE_SAFETY_MODE=true

# MCP Server Settings
MCP_SERVER_PORT=3000
MCP_ENABLE_ALL=true

# Testing Configuration
TEST_FRAMEWORK=jest
TEST_COVERAGE_THRESHOLD=80
TEST_ON_COMMIT=true

# Documentation Settings
GENERATE_DOCS=true
DOCS_OUTPUT_PATH=./docs

# Multi-Agent Settings
MULTI_AGENT_ENABLED=true
MAX_AGENTS=3
AGENT_COMMUNICATION_MODE=hub_and_spoke

# Notification Settings (optional)
NOTIFICATION_EMAIL=your_email@example.com
NOTIFICATION_WEBHOOK=https://your-webhook-url.com

# External API Keys (optional)
OPENAI_API_KEY=your_openai_key_if_needed
ANTHROPIC_API_KEY=your_anthropic_key_if_needed

# Analytics (optional)
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com

# Feature Flags
ENABLE_PROTOCOL_SHELLS=true
ENABLE_COGNITIVE_TOOLS=true
ENABLE_FIELD_THEORY=false
ENABLE_ADVANCED_ORCHESTRATION=true

# Session Management
SESSION_TIMEOUT=7200
SESSION_STORAGE=file
SESSION_PATH=./context/memory/sessions

# Backup Configuration
ENABLE_BACKUP=true
BACKUP_INTERVAL=daily
BACKUP_PATH=./backups

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Custom Settings
# Add your project-specific settings below
